<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gym.GymProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="226dp"
        tools:layout_editor_absoluteY="283dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_gym_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome" />

            <TextView
                android:id="@+id/tv_gym_cognome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cognome" />

            <TextView
                android:id="@+id/tv_gym_nascita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nascita" />

            <TextView
                android:id="@+id/tv_gym_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email" />

            <Button
                android:id="@+id/btn_gym_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aggiorna Email" />

            <Button
                android:id="@+id/btn_gym_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aggiorna Password" />

            <Button
                android:id="@+id/btn_gym_orari"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aggiorna orari" />

            <Button
                android:id="@+id/btn_gym_dati_palestra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aggiorna dati palestra" />

            <Button
                android:id="@+id/btn_gym_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>