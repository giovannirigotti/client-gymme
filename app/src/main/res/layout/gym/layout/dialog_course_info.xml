<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Informazioni del corso"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dialog_confirm_user_type_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Titolo"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_course_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome" />

    <TextView
        android:id="@+id/dialog_confirm_user_type_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Categoria"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_course_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="categoria" />

    <TextView
        android:id="@+id/dialog_confirm_user_type_text5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Personal Trainer"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_course_nominativo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nominativo" />

    <TextView
        android:id="@+id/dialog_confirm_user_type_text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Descrizione"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_course_description"
        android:layout_width="match_parent"
        android:scrollbars = "vertical"
        android:layout_height="121dp"
        android:text="descrizione" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="174dp"
            android:gravity=""
            android:layout_height="72dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_confirm_user_type_text7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Data inizio"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_course_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="data inizio" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_confirm_user_type_text8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Data fine"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_course_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="data fine" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_confirm_user_type_text6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Spazi disponibili"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_course_max_persons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="spazi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_delete_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#D61010"
            android:text="CANCELLA"
            app:cornerRadius="30dp" />

        <Button
            android:id="@+id/btn_exit_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="30dp"
            android:text="ESCI"/>

    </LinearLayout>
</LinearLayout>