<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_trainer_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    tools:context=".trainer.TrainerProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_trainer_profile_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="56dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_trainer_profile_nome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nome" />

                    <TextView
                        android:id="@+id/tv_trainer_profile_cognome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cognome" />

                    <TextView
                        android:id="@+id/tv_trainer_profile_nascita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nascita" />

                    <TextView
                        android:id="@+id/tv_trainer_profile_codice_fiscale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Codice Fiscale" />

                    <TextView
                        android:id="@+id/tv_trainer_profile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email" />

                    <Button
                        android:id="@+id/btn_trainer_profile_mail"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Aggiorna Email" />

                    <TextView
                        android:id="@+id/tv_trainer_profile_qualifica"
                        android:layout_width="match_parent"
                        android:layout_height="91dp"
                        android:text="Qualifica" />

                    <Button
                        android:id="@+id/btn_trainer_profile_qualifica"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Aggiorna Qualifiche" />

                    <Button
                        android:id="@+id/btn_trainer_profile_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Aggiorna Password" />

                    <Button
                        android:id="@+id/btn_trainer_profile_logout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Logout" />

                </LinearLayout>
            </ScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF">

        <include layout="@layout/trainer_drawer"></include>

    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>