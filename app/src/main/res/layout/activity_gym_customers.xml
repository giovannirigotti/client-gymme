<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".gym.menage_customer.GymCustomersActivity">

    <TextView
        android:id="@+id/textView23"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista clienti"
        android:textAlignment="center"
        android:textColor="#252121"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_search_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ricerca clienti per nome"
        android:inputType="textPersonName" />

    <ListView
        android:id="@+id/lv_clienti_palestra"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>