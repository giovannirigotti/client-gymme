<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Seleziona un esercizio o premi esci."
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dialog_confirm_user_type_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista esercizi"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />


    <ListView
        android:id="@+id/lv_select_exercise"
        android:layout_width="397dp"
        android:layout_height="249dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/tv_selected_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Esercizio selezionato"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/dialog_confirm_user_type_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inserisci ripetizioni"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/et_dialog_insert_repetitions"
        android:hint="esempio: 12x4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="1"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_confirm_exercise_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#D61010"
            android:text="ESCI"
            app:cornerRadius="30dp" />

        <Button
            android:id="@+id/dialog_confirm_exercise_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INSERISCI"
            app:cornerRadius="30dp" />

    </LinearLayout>
</LinearLayout>