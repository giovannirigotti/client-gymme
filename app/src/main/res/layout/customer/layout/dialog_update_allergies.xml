<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center_vertical"
        android:text="Modifica le allergie e premi aggiorna altrimenti premi esci."
        android:textAlignment="viewStart"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dialog_confirm_user_type_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aggiorna allergie"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_qualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:hint="Le tue allergie"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLength="500"
            android:maxLines="10"
            android:minLines="1"
            android:scrollbars="vertical" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_confirm_user_type_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp "
            android:backgroundTint="#D61010"
            android:text="ESCI"
            app:cornerRadius="30dp" />

        <Button
            android:id="@+id/dialog_confirm_user_type_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AGGIORNA"
            app:cornerRadius="30dp" />

    </LinearLayout>
</LinearLayout>