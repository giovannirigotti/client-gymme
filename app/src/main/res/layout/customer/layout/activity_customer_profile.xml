<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.CustomerProfileActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/rounded_rectangle"
                            android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="10dp"
                                            android:text="Email:"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:id="@+id/tv_customer_profile_email"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Email"
                                            android:textSize="18sp"
                                            android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/textView37"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="10dp"
                                            android:text="Nome:"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:id="@+id/tv_customer_profile_nome"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Nome"
                                            android:textSize="18sp"
                                            android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="10dp"
                                            android:text="Cognome:"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:id="@+id/tv_customer_profile_cognome"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Cognome"
                                            android:textSize="18sp"
                                            android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="10dp"
                                            android:text="Altezza:"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:id="@+id/tv_customer_profile_altezza"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Altezza"
                                            android:textSize="18sp"
                                            android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="10dp"
                                            android:text="Data di nascita:"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:id="@+id/tv_customer_profile_nascita"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Nascita"
                                            android:textSize="18sp"
                                            android:textStyle="bold" />

                                </LinearLayout>

                                <Button
                                    android:id="@+id/btn_customer_profile_email"
                                    android:layout_width="200dp"
                                    android:layout_height="45dp"
                                    android:layout_marginTop="10dp"
                                    android:text="Aggiorna Email"
                                    app:cornerRadius="30dp"
                                    app:icon="@drawable/ic_baseline_edit_24" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_rectangle"
                            android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/rounded_rectangle"
                                    android:orientation="vertical">

                                        <androidx.core.widget.NestedScrollView
                                            android:layout_width="match_parent"
                                            android:layout_height="65dp">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:orientation="vertical">

                                                        <TextView
                                                            android:id="@+id/tv_customer_profile_disturbi"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:text="Disturbi"
                                                            android:textSize="18sp" />
                                                </LinearLayout>
                                        </androidx.core.widget.NestedScrollView>

                                        <Button
                                            android:id="@+id/btn_customer_profile_disturbi"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:text="Aggiorna Disturbi"
                                            app:cornerRadius="30dp"
                                            app:icon="@drawable/ic_baseline_edit_24" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rounded_rectangle"
                                    android:orientation="vertical">

                                        <androidx.core.widget.NestedScrollView
                                            android:layout_width="match_parent"
                                            android:layout_height="65dp">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:orientation="vertical">

                                                        <TextView
                                                            android:id="@+id/tv_customer_profile_allergie"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:text="Allergie"
                                                            android:textSize="18sp" />
                                                </LinearLayout>
                                        </androidx.core.widget.NestedScrollView>

                                        <Button
                                            android:id="@+id/btn_customer_profile_allergie"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:text="Aggiorna Allergie"
                                            app:cornerRadius="30dp"
                                            app:icon="@drawable/ic_baseline_edit_24" />
                                </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_customer_profile_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text="Aggiorna Password"
                            app:cornerRadius="30dp"
                            app:icon="@drawable/ic_baseline_lock_24" />

                        <Button
                            android:id="@+id/btn_customer_profile_logout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:backgroundTint="#FF0000"
                            android:text="Logout"
                            app:cornerRadius="30dp"
                            app:icon="@drawable/ic_baseline_exit_to_app_24" />

                </LinearLayout>
        </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>